= form_for @candidato do |f|
  - if @candidato.errors.any?
    #error_explanation
      %h2= "#{pluralize(@candidato.errors.count, "error")} prohibited this candidato from being saved:"
      %ul
        - @candidato.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :matricula, 'MatrÃ­cula'
    = f.number_field :matricula
  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :semestre
    = f.number_field :semestre
  .field
    = f.label :ira, 'IRA'
    = f.number_field :ira
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :oferta, 'Disciplina'
    = f.collection_select(:oferta_id, Oferta.all, :id, :nome_with_turma, :prompt => true)
  .field
    = f.label :tipo, 'Categoria'
    = f.collection_select(:tipo_id, Tipo.all, :id, :descricao, :prompt => true)

  .actions
    = f.submit 'Salvar'
